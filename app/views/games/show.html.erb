<a href="/games" style="display: block; padding: 20px;height: 100px; background-color:#ffcd84; color: white; font-size: 40px;">
  <%= fa_icon("angle-left") %> Challenge
</a>




<% if @game.ended? %>
  <div class="jumbotron">
    <% if @game.game_participators.winners.pluck(:user_id).include?(current_user.id) %>
      <h1>You win</h1>
    <% else %>
      <h1>You lose</h1>
    <% end %>
  </div>
<% end %>




<h1><%= @game.title %></h1>


<% if @game.user != current_user %>

  <% if !current_user.participated?(@game) %>
    <%= link_to "Join", join_form_game_path(@game), :class => "btn btn-primary" %>
  <% else %>
    <%= link_to "Join", join_form_game_path(@game), :class => "btn btn-primary", :disabled => :disabled %>
  <% end %>

<% else %>
  <% if current_user.participated?(@game) %>
    <%= link_to "Choose Winner", choose_winner_game_path(@game), :class => "btn btn-primary" %>
  <% end %>

<% end %>

<% if current_user.participated?(@game) %>
  <%= link_to "Complete!", complete_form_game_path(@game), :class => "btn btn-primary" %>
<% end %>


<br>

Total Participators: <%= @challengers_count %>


<p><%= @game.description %></p>

<h3>Challengers</h3>

<table class="table">
  <tbody>
    <% @challengers.each do |challenger| %>
      <tr>
        <td>
          <%= fa_icon("trophy") if @game.game_participators.winners.pluck(:user_id).include?(challenger.id) %>
        </td>
        <td><%= render_user_avatar(challenger) %><%= challenger.name %></td>
        <td>
          <% if challenger.game_result(@game) %>
            <%= link_to challenger.game_result(@game).image.large.url do %>
              <%= image_tag(challenger.game_result(@game).image.small) %>
            <% end %>

            <%= challenger.game_result(@game).description %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



