<div class="img-container" style="position:relative;">
    <%= link_to image_tag("icon_03.png"), new_game_path %>
</div>

<div class="btn-group btn-group-justified">
    <div class="btn-group">
        <button type="button" class="btn btn-default active" style="background: #FD7168; color: white; height: 100px; font-size: 24px">Popular<br/>Challenges</button>
    </div>
    <div class="btn-group">
        <button type="button" class="btn btn-default" style="background: #E26963; color: white; height: 100px; font-size: 24px">Latest<br/>Challenges</button>
    </div>
</div>

<table class="table table-hover">
  <tbody>
    <% @games.each do |game| %>
      <tr style="background: white;">
        <td><%= link_to game.title, game_path(game), :style => "color: grey" %></td>
        <td width="20px">
            <%= check_box_tag 'participated', '1', current_user.participated? game %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation" style="background: #82D98F;">
  <div class="container vcenter" style="text-align: center; font-size:20px">
    <span style="color: white">
        You have joined <u>&nbsp;<%= current_user.participated_games.length %>&nbsp;</u> challenges
    </span>
  </div>
</nav>

